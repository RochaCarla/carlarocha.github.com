# Use official Ruby image
FROM ruby:3.1.4-slim

# Install required packages for Jekyll and native gems
RUN apt-get update -qq && apt-get install -y \
  build-essential \
  libpq-dev \
  nodejs \
  npm \
  git \
  zlib1g-dev \
  libffi-dev \
  libxml2-dev \
  libxslt1-dev \
  && rm -rf /var/lib/apt/lists/*

# Install Bundler (fix specific version to match Gemfile.lock)
RUN gem install bundler:2.4.7 jekyll

# Create app directory
WORKDIR /srv/jekyll

# Copy Gemfile first for caching
COPY Gemfile Gemfile.lock ./

# Install gems
RUN bundle install

# Copy the rest of the site
COPY . .

# Expose Jekyll server port
EXPOSE 4000

# Run Jekyll server
CMD ["bundle", "exec", "jekyll", "serve", "--host", "0.0.0.0"]
